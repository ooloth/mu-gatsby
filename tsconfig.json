{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    // "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "noEmit": true,
    "noUnusedLocals": false,
    "skipLibCheck": true, // ignore libraries
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "public", ".cache"]
}
